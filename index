// --- GAME LOGIC ---
let currentLevel, currentDifficulty;

function startGame(difficulty) {
  document.getElementById('menu').style.display = 'none';
  document.getElementById('game').style.display = 'block';
  document.getElementById('controlButtons').style.display = 'none';
  currentDifficulty = difficulty;
  nextLevel();
}

function backToMenu() {
  document.getElementById('game').style.display = 'none';
  document.getElementById('menu').style.display = 'block';
}

function nextLevel() {
  document.getElementById('controlButtons').style.display = 'none';
  const levels = {
    easy: easyLevels,
    medium: mediumLevels,
    hard: hardLevels,
    profi: profiLevels
  }[currentDifficulty];

  currentLevel = levels[Math.floor(Math.random() * levels.length)];
  showLevel();
}

function showLevel() {
  const sentenceDiv = document.getElementById('sentence');
  const questionDiv = document.getElementById('question');
  const optionsDiv = document.getElementById('options');
  sentenceDiv.innerHTML = '';
  questionDiv.innerHTML = '';
  optionsDiv.innerHTML = '';

  let units = [];
  let intervalTime = 2000;

  switch(currentDifficulty) {
    case 'easy': 
      units = currentLevel.satz.split(' ');
      intervalTime = 2000;
      break;
    case 'medium': 
      units = currentLevel.saetze.join(' ').split(' ');
      intervalTime = 1500;
      break;
    case 'hard': 
      units = currentLevel.aktivitaeten;
      intervalTime = 1500;
      break;
    case 'profi': 
      units = currentLevel.saetze;
      intervalTime = 1500;
      break;
  }

  let index = 0;
  const interval = setInterval(() => {
    if(index >= units.length) {
      clearInterval(interval);
      setTimeout(showQuestion, 500);
      return;
    }
    sentenceDiv.innerHTML = '<span style="font-size:4em;">' + units[index] + '</span>';
    index++;
  }, intervalTime);
}

function showQuestion() {
  const questionDiv = document.getElementById('question');
  const optionsDiv = document.getElementById('options');
  questionDiv.innerText = currentLevel.frage;

  const btn1 = document.createElement('button');
  btn1.innerText = currentLevel.option1;
  btn1.onclick = () => alert('Richtig!');

  const btn2 = document.createElement('button');
  btn2.innerText = currentLevel.option2;
  btn2.onclick = () => alert('Falsch!');

  optionsDiv.appendChild(btn1);
  optionsDiv.appendChild(btn2);

  document.getElementById('controlButtons').style.display = 'block';
}
</script>

